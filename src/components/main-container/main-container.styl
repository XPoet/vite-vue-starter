$header-height = 60px
$left-nav-width = 100px

.main-container {
  position absolute
  top 0
  left 0
  right 0
  bottom 0

  .top-box {
    position relative
    box-sizing border-box
    width 100%
    height $header-height
    padding 10px 20px
    font-size 20px
    font-weight bold
    display flex
    align-items center
    background #fff
  }


  .bottom-box {
    position relative
    box-sizing border-box
    width 100%
    height 'calc(100% - %s)' % $header-height
    display flex
    justify-content space-between
    background #f2f2f2
    padding-top 10px

    .left-nav {
      position relative
      box-sizing border-box
      width $left-nav-width
      height 100%
      background #fff
    }


    .right-content {
      position relative
      box-sizing border-box
      width 'calc(100% - %s)' % $left-nav-width
      height 100%
      background #fff
      margin-left 10px
      border-top-left-radius 6px
      padding 10px
    }
  }
}
