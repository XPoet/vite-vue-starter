$font-color = #2c3e50
$background-color = #fff
$second-background-color = #f0f0f0

html
body {
  position relative
  width 100%
  height 100%
  margin 0
  padding 0
  color $font-color
}

ul
li
ol {
  margin 0
  padding 0
  list-style none
}

.flex-center {
  display flex
  align-items center
  justify-content center
}

.page-title {
  margin-bottom 10px
  padding-bottom 10px
  font-size 20px
  border-bottom 1px solid #ddd
}
